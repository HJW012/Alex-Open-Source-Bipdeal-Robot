import rospy
from geometry_msgs.msg import Twist
import sys, select, os
if os.name == 'nt':
  import msvcrt
else:
  import tty, termios

MAX_ANG_VEL = 2500

ANG_VEL_STEP_SIZE = 100

msg = """
Control Connected Motor (via CAN)!
---------------------------
Moving around:

w/s	: increase/decrease motor angular velocity (steps/s)
x	: stop motor
a	: exit motor mode
d	: enter motor mode


CTRL-C to quit
"""

e = """
Communications Failed
"""

def getKey():
    if os.name == 'nt':
      return msvcrt.getch()

    tty.setraw(sys.stdin.fileno())
    rlist, _, _ = select.select([sys.stdin], [], [], 0.1)
    if rlist:
        key = sys.stdin.read(1)
    else:
        key = ''

    termios.tcsetattr(sys.stdin, termios.TCSADRAIN, settings)
    return key

def vels(target_angular_vel):
    return "currently:\t angular vel %s " % (target_angular_vel)
    

def makeSimpleProfile(output, input, slop):
    if input > output:
        output = min( input, output + slop )
    elif input < output:
        output = max( input, output - slop )
    else:
        output = input

    return output

def constrain(input, low, high):
    if input < low:
      input = low
    elif input > high:
      input = high
    else:
      input = input

    return input

def checkAngularLimitVelocity(vel):
    vel = constrain(vel, -MAX_ANG_VEL, MAX_ANG_VEL)

    return vel

if __name__=="__main__":
    if os.name != 'nt':
        settings = termios.tcgetattr(sys.stdin)

    rospy.init_node('motor_teleop')
    pub = rospy.Publisher('cmd_vel', Twist, queue_size=10)

    status = 0
    target_angular_vel  = 0.0
    control_angular_vel = 0.0
    

    try:
        print(msg)
        while(1):
            key = getKey()
            if key == 'w' :
                target_angular_vel = checkAngularLimitVelocity(target_angular_vel + ANG_VEL_STEP_SIZE)
                status = status + 1
                print(vels(target_angular_vel))
            elif key == 's' :
                target_angular_vel = checkAngularLimitVelocity(target_angular_vel - ANG_VEL_STEP_SIZE)
                status = status + 1
                print(vels(target_angular_vel))
                
            elif key == 'a' :
                target_angular_vel  = 0.0
                control_angular_vel = 0.0
                status = status + 1
                print("Exit Motor Mode")
            elif key == 'd' :
                target_angular_vel  = 0.0
                control_angular_vel = 0.0
                status = status + 1
                print("Enter Motor Mode")
            elif key == ' ' or key == 'x' :
                target_angular_vel  = 0.0
                control_angular_vel = 0.0
                print(vels(target_angular_vel))
            else:
                if (key == '\x03'):
                    break

            if status == 20 :
                print(msg)
                status = 0

            twist = Twist()

            control_angular_vel = makeSimpleProfile(control_angular_vel, target_angular_vel, (ANG_VEL_STEP_SIZE/2.0))
            twist.angular.x = 0.0; twist.angular.y = 0.0; twist.angular.z = control_angular_vel

            pub.publish(twist)

    except:
        print(e)

    finally:
        twist = Twist()
        twist.angular.x = 0.0; twist.angular.y = 0.0; twist.angular.z = 0.0
        pub.publish(twist)

    if os.name != 'nt':
        termios.tcsetattr(sys.stdin, termios.TCSADRAIN, settings)
